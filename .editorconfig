root = true

[*]
charset = utf-8
indent_style = space
end_of_line = lf
#trim_trailing_whitespace = true

[*.{crt,keystore,truststore,kryo}]
end_of_line = unset

[*.java]
#indent_size = 4
insert_final_newline = true

[*.{yaml,yml,properties}]
indent_size = 2
insert_final_newline = true

[*.xml]
#indent_size = 4
insert_final_newline = true

[*.md]
#indent_size = 4
insert_final_newline = true

[*.sh]
#indent_size = 4
insert_final_newline = true
